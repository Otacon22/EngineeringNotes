\[
p(x)=\frac{1}{\sqrt{2\pi}\sigma}\cdot e^{-\frac{\left(x-\mu\right)^{2}}{2\sigma^{2}}}
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
