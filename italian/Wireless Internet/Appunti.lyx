\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
L_{P}=69.55+26.16\cdot log\left(f\right)-13.82\cdot log\left(h_{T}\right)-a\left(h_{R}\right)+\left(44.9-6.55\cdot log\left(h_{T}\right)\right)\cdot log\left(d\right)\quad\quad\left[dB\right]
\]

\end_inset


\end_layout

