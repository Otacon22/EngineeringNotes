\begin_layout Subsubsection*
Auto-correlazione
\end_layout

\begin_layout Standard
Serve a quantificare il grado d'indipendenza che esiste tra i campionidel
 processo
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R_{x}\left(t_{1},t_{2}\right)=E\left[x^{*}\left(t_{1}\right)\cdot x\left(t_{2}\right)\right]=\int\int_{-\infty}^{+\infty}a^{*}\cdot b\cdot P_{x\left(t_{1}\right),x\left(t_{2}\right)}\left(a,b\right)\, da\, db
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(P_{x\left(t_{1}\right),x\left(t_{2}\right)}\left(a,b\right)=P_{x\left(t_{2}\right)/x\left(t_{1}\right)=a}\left(b\right)\cdot P_{x\left(t_{1}\right)}\left(a\right)\right)
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Se e solo se 
\begin_inset Formula $x\left(t_{1}\right)$
\end_inset

 e 
\begin_inset Formula $x\left(t_{2}\right)$
\end_inset

 sono indipendenti
\series default
, allora:
\begin_inset Formula 
\[
P_{x\left(t_{1}\right),x\left(t_{2}\right)}\left(a,b\right)=P_{x\left(t_{2}\right)}\left(b\right)\cdot P_{x\left(t_{1}\right)}\left(a\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R_{x}\left(t_{1},t_{2}\right)=m_{x\left(t_{1}\right)}^{*}\cdot m_{x\left(t_{2}\right)}
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
Autocovarianza
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
C_{x}\left(t_{1},t_{2}\right)=R_{x}\left(t_{1},t_{2}\right)-m_{x\left(t_{1}\right)}^{*}\cdot m_{x\left(t_{2}\right)}
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
Nota bene
\series default
: 
\begin_inset Formula $t_{1}\neq t_{2}$
\end_inset

, perché 
\begin_inset Formula $C_{x}\left(t_{1},t_{1}\right)=0$
\end_inset

 
\series bold
sempre
\series default
.
\end_layout

\begin_layout Itemize
Se 
\begin_inset Formula $x\left(t_{1}\right)$
\end_inset

 e 
\begin_inset Formula $x\left(t_{2}\right)$
\end_inset

 sono indipendenti, allora 
\begin_inset Formula $C_{x}\left(t_{1},t_{2}\right)=0$
\end_inset


\end_layout

\begin_layout Standard

\series bold
Attenzione! Non vale il viceversa
\series default
.
 Se 
\begin_inset Formula $C_{x}\left(t_{1},t_{2}\right)=0$
\end_inset

 , non posso affermare che 
\begin_inset Formula $x\left(t_{1}\right)$
\end_inset

 e 
\begin_inset Formula $x\left(t_{2}\right)$
\end_inset

 sono indipendenti.
\end_layout

\begin_layout Standard

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
\lang english
\begin_inset Formula 
\[
\mbox{\ensuremath{\mbox{\ensuremath{\xymatrix{x\left(t_{1}\right)\text{ e }x\left(t_{2}\right)\text{ sono indipendenti}\,\ar@(u,u)[r]^{allora} & C_{x}\left(t_{1},t_{2}\right)=0\,\ar@(d,d)[l]|-X}
}}}}
\]

\end_inset


\end_layout

\begin_layout Itemize
Se 
\begin_inset Formula $C_{x}\left(t_{1},t_{2}\right)=$
\end_inset

0, posso invece dire che 
\begin_inset Formula $x\left(t_{1}\right)$
\end_inset

 e 
\begin_inset Formula $x\left(t_{2}\right)$
\end_inset

 sono 
\series bold
incorrelati
\series default
.
\end_layout

\begin_layout Subsubsection*
Coefficiente di correlazione
\end_layout

\begin_layout Standard
Quantifica il grado di correlazione (e quindi predicibilità) tra due campioni
 del processo casuale
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho_{x}\left(t_{1},t_{2}\right)=\frac{C_{x}\left(t_{1},t_{2}\right)}{\sqrt{\sigma_{x\left(t_{1}\right)}^{2}\cdot\sigma_{x\left(t_{2}\right)}^{2}}}
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
Nota
\series default
: 
\begin_inset Formula $-1<\rho_{x}\left(t_{1},t_{2}\right)<1$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\rho_{x}\left(t_{1},t_{2}\right)=0$
\end_inset

 significa che 
\begin_inset Formula $t_{2}$
\end_inset

 è impredicibile da 
\begin_inset Formula $t_{1}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\left|\rho_{x}\left(t_{1},t_{2}\right)\right|=1$
\end_inset

 significa che 
\begin_inset Formula $t_{1}$
\end_inset

e 
\begin_inset Formula $t_{2}$
\end_inset

 sono deterministicamente ricavabili l'uno dall'altro
\end_layout

\begin_layout Itemize
Se 
\begin_inset Formula $x\left(t_{1}\right)$
\end_inset

 e 
\begin_inset Formula $x\left(t_{2}\right)$
\end_inset

 incorrelati o indipendenti allora: 
\begin_inset Formula $\rho_{x}\left(t_{1},t_{2}\right)=0$
\end_inset

 ( poiché 
\begin_inset Formula $C_{x}\left(t_{1},t_{2}\right)=0$
\end_inset

 )
\end_layout

\begin_layout Subsubsection*
Processi casuali stazionari
\end_layout

\begin_layout Standard
mantengono inalterate le proprie caratteristiche statistiche nel tempo.
\end_layout

\begin_layout Itemize
Un processo è stazionario se:
\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $m_{x}$
\end_inset

 non dipende dal tempo 
\end_layout

\begin_layout Itemize
\begin_inset Formula $R_{xy}\left(\tau\right)$
\end_inset

 dove 
\begin_inset Formula $\tau=t_{2}-t_{1}$
\end_inset

, quindi nondipende dai tempi 
\begin_inset Formula $t_{1}$
\end_inset

 e 
\begin_inset Formula $t_{2}$
\end_inset

 ma solo dall'intervallo tra i due.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Formula 
\[
R_{x}\left(t_{1},\tau\right)=E\left[x^{*}\left(t_{1}\right)\cdot x\left(t_{1}+\tau\right)\right]
\]

\end_inset


\end_layout

\begin_layout Standard
In un processo stazionario, l'autocorrelazione dipende solo da 
\begin_inset Formula $t$
\end_inset

 o da 
\begin_inset Formula $\tau$
\end_inset

, non da entrambi.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
C_{x}\left(t_{1},\tau\right)=R_{x}\left(t_{1},\tau\right)-m_{x\left(t_{1}\right)}^{*}\cdot m_{x\left(t_{1}+\tau\right)}=R_{x}\left(\tau\right)-\left|m_{x}\right|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sigma_{x}^{2}=C_{x}\left(0\right)=R_{x}\left(0\right)-\left|m_{x}\right|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho_{x}\left(\tau\right)=\frac{C_{x}\left(\tau\right)}{\sigma_{x}^{2}}
\]

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Tempo di decorrelazione del processo
\series default
: 
\begin_inset Formula $t_{0}\rightarrow\rho_{x}\left(t_{0}\right)=\frac{C_{x}\left(t_{0}\right)}{\sigma_{x}^{2}}\approx0$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $R_{x}\left(\tau\right)=R^{*}\left(-\tau\right)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $R_{x}\left(\tau\right)$
\end_inset

 ha sempre il massimo in 
\begin_inset Formula $\tau=0$
\end_inset


\end_layout

\begin_layout Subsubsection*
Predizione lineare
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x_{n+m}=kx_{n}+w_{n}
\]

\end_inset


\end_layout

\begin_layout Standard
Dove 
\begin_inset Formula $x_{n+m}$
\end_inset

 è stazionario con 
\begin_inset Formula $m_{x}=0$
\end_inset

 e 
\begin_inset Formula $w_{n}$
\end_inset

 casuale 
\begin_inset Formula $m_{w}=0$
\end_inset

 , 
\begin_inset Formula $\sigma_{w}^{2}=E\left[w_{n}^{2}\right]$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sigma_{w}^{2}=\sigma_{x}^{2}\left(1-k^{2}\right)
\]

\end_inset


\begin_inset Formula 
\[
\rho_{x}\left(t\right)=k
\]

\end_inset


\begin_inset Formula 
\[
\hat{x}_{n+m}=rx_{n}
\]

\end_inset


\begin_inset Formula 
\[
\text{minimizziamo l'errore quadratico: }E\left[\varepsilon^{2}\right]=E\left[\left(\hat{x}_{n+m}-x_{n+m}\right)^{2}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dE\left[\varepsilon^{2}\right]}{dr}=0\;\Rightarrow\; r=\rho_{x}\left(t\right)
\]

\end_inset


\end_layout

\begin_layout Itemize
Quindi:
\end_layout

\begin_deeper
\begin_layout Itemize
La miglior stima lineare di 
\begin_inset Formula $x_{n+m}$
\end_inset

, noto 
\begin_inset Formula $x_{n}$
\end_inset

, è: 
\begin_inset Formula $\hat{x}_{n+m}=\rho_{x}\left(m\right)\cdot x_{n}$
\end_inset


\end_layout

\begin_layout Itemize
Più 
\begin_inset Formula $\left|\rho_{x}\left(t\right)\right|$
\end_inset

 è prossimo ad 1 , più la varianza dell'errore è piccola
\end_layout

\end_deeper
