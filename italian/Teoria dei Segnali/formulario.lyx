\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{F}\left\{ x_{n}*h_{n}\right\} =X\left(\phi\right)\cdot H\left(\phi\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Attenzione, non vale il viceversa!
\end_layout

\begin_layout Itemize

\series bold
Convoluzione circolare
\series default
:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\widetilde{Z}\left(\phi\right)=\widetilde{X}\left(\phi\right)*\widetilde{Y}\left(\phi\right)=\int_{-\frac{1}{2}}^{\frac{1}{2}}\widetilde{X}\left(\theta\right)\cdot\widetilde{Y}\left(\phi-\theta\right)d\theta
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\widetilde{Z}\left(f\right)=T\cdot\int_{-\frac{1}{2T}}^{\frac{1}{2T}}\widetilde{X}\left(\theta\right)\cdot\widetilde{Y}\left(f-\theta\right)d\theta
\]

\end_inset


\end_layout

